<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Total Item Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= image_tag line_item.product.image.tiny %></td>
            <td>
              <h4><%= line_item.product.name %></h4>
              <p><%= line_item.product.description %></p>
            </td>
            <td><%= line_item.quantity %></td>
            <td><%= humanized_money_with_symbol line_item.total_price %></td>
          </tr>
          <% end %>
          <tfoot>
            <tr>
              <th colspan="2">Email: <%= @order[:email] %></th>
              <th colspan="2">Cart Total: <%= humanized_money_with_symbol @order[:total_cents] %></th>
            </tr>
          </tfoot>
      </tbody>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
